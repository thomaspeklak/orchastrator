extends layout

block content
    h1 Orchastrator
    if info
        p.info= info
    if error
        p.error= error
    p Start a session
    form(action="/", method="POST")
        p
            label Username
                input(name="username")
        p
            label Password
                input(name="password", type="password")
        p
            button(type=submit) Start
    if currentUrl
        p
            a(href="#{currentUrl}") Join current session
